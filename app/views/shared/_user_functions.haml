#tabber
  - if !current_user
    %ul
      %li
        = link_to 'Register', new_account_path
      %li
        = link_to 'Log-In', new_user_session_path
      %li
        = link_to 'Forgot password', new_password_reset_path
  - else
    %ul
      %li
        = link_to 'My Deliveries', :controller => :users, :action => 'my_deliveries'
      %li
        = link_to 'My Balance', :controller => :users, :action => 'my_balance'
      %li
        = link_to 'Edit Profile', edit_user_path(:current) 
      %li
        = link_to 'Log-Out', user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?"
- if current_user && current_user.role_symbols.include?(:admin)
  #admintabber
    %ul
      %li
        = link_to 'Users', users_path
      %li
        = link_to 'Deliveries', deliveries_path
      %li
        = link_to 'Subscriptions', subscriptions_path
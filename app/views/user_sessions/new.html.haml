%h1="Login"
- form_for @user_session, :url => user_session_path do |f|
  - if @user_session.errors.any?
    %errorExplanation
      %h2
        = pluralize(@user.errors.count, "error") + " stopped us from changing this account:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li
            = msg
  %p
    %div
      = f.label :username, "Username or email address"
    %div
      = f.text_field :username
  %p
    %div
      = f.label :password
    %div
      = f.password_field :password
  %p
    %div
      = f.label :remember_me
    %div
      = f.check_box :remember_me
  %p
    %div
      = f.submit "Log-in"
%br
%p
  Don't have an account?
  = link_to "Register a new account", new_account_path
%p
  Forgotten your username or password?
  =# link_to "Request a new password", new_password_reset_path